<h3>Edit A Landmark</h3>

<form action="/landmarks/<%= @landmark.id %>" method="POST">

  <input id="hidden" type="hidden" name="_method" value="patch"></input>

  <label for="name">Name: </label>
  <input id="name" type="text" name="landmark[name]" value="<%= @landmark.name %>"></input><br></br>
  <label for="year_completed">Year Completed: </label>
  <input id="year_completed" type="integer" name="landmark[year_completed]" value="<%= @landmark.year_completed %>"></input><br></br>

<p><input type="submit" value="Edit Landmark"></input></p>

</form>
