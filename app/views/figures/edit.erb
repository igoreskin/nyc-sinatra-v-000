<h3>Edit A Figure</h3>

<form action="/figures/<%= @figure.id %>" method="POST">

  <input id="hidden" type="hidden" name="_method" value="patch"></input>

  <label for="figure_name">Name: </label>
  <input id="figure_name" type="text" name="figure[name]" value="<%= @figure.name %>"></input><br></br>

  <label>Titles: </label><br></br>
  <% Title.all.each do |title| %>
  <input type="checkbox" id="title_<%= title.id %>" name="figure[title_ids][]" value="<%= title.id %>"
  <%= 'checked' if @figure.titles.include?(title) %>></input><br>
  <% end %><br></br>

  <label for="new_title">A New Title: </label>
  <input id="new_title" type="text" name="title[name]"></input><br></br>

  <label>Landmarks: </label><br></br>
  <% Landmark.all.each do |landmark| %>
  <input type="checkbox" id="landmark_<%= landmark.id %>" name="figure[landmark_ids][]" value="<%= landmark.id %>"
  <%= 'checked' if @figure.landmarks.include?(landmark) %>></input><br>
  <% end %><br></br>

  <h4>Create a New Landmark</h4>
  <label for="new_landmark">Name: </label>
  <input id="new_landmark" type="text" name="landmark[name]"></input><br></br>
  <label for="new_landmark_year_completed">Year Completed: </label>
  <input id="new_landmark_year_completed" type="text" name="landmark[year_completed]"></input>

  <br></br>

  <p><input type="submit" value="Edit Figure"></input></p>

</form>
