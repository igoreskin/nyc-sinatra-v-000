<form action="/figures" method="POST">

  <h4>Create a New Figure</h4>

  <label for="figure_name">Name: </label>
  <input id="figure_name" type="text" name="figure[name]"></input><br></br>

  <label>Titles: </label><br></br>
  <% Title.all.each do |title| %>
  <input type="checkbox" id="title_<%= title.id %>" name="figure[title_ids][]" value="<%= title.id %>"><%= title.name %></input><br>
  <% end %><br></br>

  <label for="new_title">A New Title: </label>
  <input id="new_title" type="text" name="title[name]"></input><br></br>

  <label>Landmarks: </label><br></br>
  <% Landmark.all.each do |landmark| %>
  <input type="checkbox" id="landmark_<%= landmark.id %>" name="figure[landmark_ids][]" value="<%= landmark.id %>"><%= landmark.name %></input><br>
  <% end %><br></br>

  <h4>Create a New Landmark</h4>
  <label for="new_landmark">Name: </label>
  <input id="new_landmark" type="text" name="landmark[name]"></input><br></br>
  <label for="new_landmark_year_completed">Year Completed: </label>
  <input id="new_landmark_year_completed" type="text" name="landmark[year_completed]"></input>

  <br></br>

  <p><input type="submit" value="Create New Figure"></input></p>

</form>
